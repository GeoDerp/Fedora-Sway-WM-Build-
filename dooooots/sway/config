#
# Layout stuff:
#
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+$alt+b splith
    bindsym $mod+$alt+v splitv

    # Switch the current container between different layout styles
    bindsym $mod+s layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split

    # Make the current focus fullscreen
    bindsym $mod+$alt+f fullscreen

    #change from workstations (WIN style :D)
    bindsym Mod1+Tab workspace next
    bindsym Mod1+Shift+Tab workspace prev
      #If that dose not work try bindcode Mod1+23 workspace next & bindcode Mod1+Shift+23 workspace prev

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+$alt+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # move focus to the parent container
    bindsym $mod+a focus parent

#
# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym $mod+$alt+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+$alt+equal scratchpad show
#
# Resizing containers:
#
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left resize shrink width 10 px or 10 ppt
    bindsym $down resize grow height 10 px or 10 ppt
    bindsym $up resize shrink height 10 px or 10 ppt
    bindsym $right resize grow width 10 px or 10 ppt

    # ditto, with arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

#Window Colours
  #red
  set $bg-color            #ae1324
  #other options #ae1324 #a33c3e #902b2d
  #green
  #set $bg-color            #62723a
  set $inactive-bg-color   #822a2c
  #4c1315
  #other options #682123
  set $text-color          #ffdbdf
  #other options #ffbfc8 #ffb2bd
  set $inactive-text-color #dd7c7e
  #other options #c47f81 #ba868d #e29a9c
  set $urgent-bg-color     #ae1324
  set $indicator-color     #4c1315
  #other option #445c02

  # window config
  #                       border              background         text                 indicator        child_border
  client.focused          $bg-color           $bg-color          $text-color          $indicator-color $bg-color
  client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color $indicator-color $bg-color
  client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color $indicator-color $bg-color
  client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          $indicator-color $bg-color

#gaps (rim arround the windows)
  gaps inner 5
  gaps outer 8


#Startups
  include /etc/sway/config.d/*
  #exec --no-startup-id waybar &
  exec --no-startup-id sleep 10 && albert
  exec swayidle -w timeout 300 'swaylock -f -u -i ~/Pictures/Wallpapers/LoggedOut.jpg --scaling fill -c 0000080' timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' before-sleep 'swaylock -f -u -i ~/Pictures/Wallpapers/LoggedOut.jpg --scaling fill -c 0000080'


#Running Waybar (SwayBar alternative)
  bar {
      swaybar_command waybar
  }

#For the laptop speshial keys
  #(sudo dnf install brightnessctl -y if your using an latop for chaning brightness)
  #(sudo dnf flameshot -y for the ability to screenshot, you would also need to mkdir )
  bindsym XF86AudioRaiseVolume exec pactl set-sink-volume $(pacmd list-sinks |awk '/* index:/{print $3}') +5%
  bindsym XF86AudioLowerVolume exec pactl set-sink-volume $(pacmd list-sinks |awk '/* index:/{print $3}') -5%
  bindsym XF86AudioMute exec pactl set-sink-mute $(pacmd list-sinks |awk '/* index:/{print $3}') toggle
  bindsym XF86MonBrightnessDown exec brightnessctl set 5%-
  bindsym XF86MonBrightnessUp exec brightnessctl set +5%
  bindsym print exec grim $(xdg-user-dir PICTURES)/$(date +'%Y-%m-%d-%H%M%S_grim.png')
